generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model VideoGame {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  releaseDate String
  genre       String
  editor      String
}

model GameGenre {
  id    Int    @id @default(autoincrement())
  genre String
}

model Editor {
  id         Int    @id @default(autoincrement())
  enterprise String
}
